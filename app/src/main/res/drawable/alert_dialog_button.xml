<!-- res/drawable/flat_button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccent"/> <!-- Purple Background color for pressed state -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryDark"/> <!-- Purple Background color for default state -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
        </shape>
    </item>
</selector>
