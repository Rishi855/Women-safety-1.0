    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="213dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:text="Check Permissions"
                android:textAlignment="center" />

            <Button
                android:id="@+id/psms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SMS PERMISSION" />

            <Button
                android:id="@+id/pcall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CALL PERMISSION" />

            <Button
                android:id="@+id/plocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOCATION PERMISSION" />

        </LinearLayout>

        <Button
            android:id="@+id/btnSosSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set SOS settings" />

        <Button
            android:id="@+id/btnShakeSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Shake Settings" />


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>

</FrameLayout>


